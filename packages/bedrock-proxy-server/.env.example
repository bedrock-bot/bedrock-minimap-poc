# Bedrock Proxy Server Configuration

# Server port
PORT=3001

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3002

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Node environment
NODE_ENV=development

# ========================================
# Minecraft Connection Settings
# ========================================

# Minecraft version (e.g., 1.20.10)
MC_VERSION=1.20.10

# Minecraft server host (IP or hostname)
MC_SERVER_HOST=localhost

# Minecraft server port (default: 19132)
MC_SERVER_PORT=19132

# ========================================
# Relay Settings
# ========================================

# Enable relay mode (true/false)
# When enabled, allows Minecraft clients to connect through the proxy
RELAY_ENABLED=false

# Relay host (IP to bind for relay connections)
RELAY_HOST=0.0.0.0

# Relay port (port for Minecraft clients to connect to)
RELAY_PORT=19133

# ========================================
# Performance & Caching Settings
# ========================================

# Enable chunk caching (true/false)
# Improves performance by caching processed chunks
ENABLE_CHUNK_CACHING=true

# World save interval in seconds (0 to disable)
# How often to save world data to disk
WORLD_SAVE_INTERVAL=300

# Maximum number of loaded chunks in memory
# Higher values use more memory but improve performance
MAX_LOADED_CHUNKS=1000

# Player position update interval in milliseconds
# How often to send player position updates
PLAYER_UPDATE_INTERVAL=1000

# ========================================
# Storage Settings
# ========================================

# Profiles folder path
# Where to store player profiles and world data
PROFILES_FOLDER=./profiles

# ========================================
# Debug Settings
# ========================================

# Enable debug logging (true/false)
# Provides detailed logging for troubleshooting
ENABLE_DEBUG_LOGGING=false

# ========================================
# Connection Settings
# ========================================

# Auto-reconnect to Minecraft server (true/false)
# Automatically reconnect if connection is lost
AUTO_RECONNECT=true

# Reconnect interval in seconds
# Time to wait before attempting to reconnect
RECONNECT_INTERVAL=5