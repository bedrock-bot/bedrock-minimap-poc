# Minimap Server Configuration

# Server port for web clients
PORT=3002

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Proxy server URL
PROXY_URL=http://localhost:3001

# Connection settings
RECONNECTION=true
RECONNECTION_DELAY=1000

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Node environment
NODE_ENV=development

# ========================================
# Performance Settings (inherited from proxy)
# ========================================

# Enable chunk caching (true/false)
# Should match the proxy server setting
ENABLE_CHUNK_CACHING=true

# Maximum number of loaded chunks in memory
# Should match or be less than proxy server setting
MAX_LOADED_CHUNKS=1000

# ========================================
# Debug Settings
# ========================================

# Enable debug logging (true/false)
# Provides detailed logging for troubleshooting
ENABLE_DEBUG_LOGGING=false